
@{
    ViewBag.Title = "Checkout";
    Layout = "~/Views/Shared/TemPlate.cshtml";
    WebShop_Auth.Models.Cart cart = (WebShop_Auth.Models.Cart)Session["Cart"];
}

<h2 style="margin-left:80px">Checkout</h2>
@model WebShop_Auth.Models.PlaceOrder

<div class="container">
    <div class="row">
        <div class="col-md-6">

            @using (Html.BeginForm("PlaceOrder", "HomeShop", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <div class="form-group">
                    <label>Full Name</label>
                    <input type="text" class="form-control" value="@Model.Name" name="Name" placeholder="Fullname" />
                </div>
                <div class="form-group">
                    <label>Email</label>
                    <input type="email" class="form-control" name="Email" value="@Model.Email" placeholder="Email" />
                </div>
                <div class="form-group">
                    <label>Telephone</label>
                    <input type="text" class="form-control" name="Telephone" value="@Model.Telephone" placeholder="Telephone" />
                </div>
                <div class="form-group">
                    <label>Address</label>
                    <textarea class="form-control" name="Address"></textarea>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-danger">Submit</button>
                </div>
            }


        </div>
        <div class="col-md-6">
            <h3>Các sản phẩm:</h3>
            <ul>
                @foreach (var item in cart.CartItems)
                {
                    <li><b>@item.Quantity</b> x @item.Product.ProductName ----- @item.Product.Price</li>
                }
            </ul>
        </div>
    </div>
</div>

